extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", accept="video/*", required, id="video", name="video")
        input(name = "title",placeholder="Video Title",requried)
        input(name = "description",placeholder="Description",requried)
        input(name = "hashtags",placeholder="Hashtages, separated by comma.",requried)
        input(value="Save",type="submit")